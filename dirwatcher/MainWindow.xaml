<Window x:Class="dirwatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DirWatcher" Height="350" Width="525"
        DataContext="{StaticResource MainViewModel}" Icon="dirwatcher.ico"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding StartPath}"></TextBox>
        <TextBox Grid.Row="1" Text="{Binding Log,Mode=OneWay}" Margin="5" TextWrapping="NoWrap" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <TextBlock Grid.Row="2" Margin="5" Text="{Binding EventCount,StringFormat=Events: {0},Mode=OneWay}"/>
    </Grid>
</Window>
